---
import Header from "../components/Header.astro";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>
      The Fujoshi Guide to Web Development â€” Now raising on Kickstarter
    </title>
    <link rel="stylesheet" href="https://use.typekit.net/exd6spk.css" />
    <style is:global>
      /* Handmade reset */
      * {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
        /* font family here because otherwise inputs don't inherit */
        font-family: "nunito", sans-serif;
      }
      body {
        --body-width: 750px;
        --fujo-cream: #f7eedf;
        --fujo-purple: #c29fc9;
        --fujo-red: #ff7976;
        --fujo-light-blue: #bbf7dd;
        --terminal-dark: #464258;
        --kickstarter-green: #05ce78;
        --text-color-base: #56411e;
        --text-color-disabled: #d0c4af;
        background-color: var(--fujo-cream);
        color: var(--text-color-base);
        display: flex;
        flex-direction: column;
        align-items: center;
        padding-block: 20px;
      }
      main {
        max-width: var(--body-width);
      }
      h1 {
        font-family: "freude", sans-serif;
        font-weight: 400;
        font-style: normal;
        color: var(--fujo-red);
        font-size: 3rem;
        -webkit-text-stroke: 1px var(--terminal-dark);
        text-align: center;
        margin-block-start: 3rem;
      }
      p {
        line-height: 1.4em;
        margin-top: 1rem;
      }
      .roster img {
        max-width: 100%;
        display: block;
      }
      .call-to-action {
        background-color: white;
        padding: 15px 20px;
        border: 2px solid var(--kickstarter-green);
        display: flex;
        flex-direction: column;
        gap: 3px;
        font-weight: bold;
        color: #317163;
        text-decoration: none;
        align-items: center;
        max-width: 400px;
        border-radius: 20px;
        box-shadow: 0 3px 14px 0 rgba(0, 0, 0, 0.1);
        margin: 0 auto;
        transition: all 150ms ease-out;
        line-height: 1rem;
        margin-block-start: 2.4rem;
      }
      .call-to-action:hover {
        cursor: pointer;
        box-shadow: 0 3px 16px 0 rgba(0, 0, 0, 0.2);
        transform: scale(1.01);
      }
      .call-to-action > img {
        display: block;
        max-width: 100%;
      }
    </style>
  </head>
  <body>
    <Header />
    <main>
      <slot />
    </main>
  </body>
</html>
